<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Age_rule</fullName>
    <active>true</active>
    <description>Age should be more than 18</description>
    <errorConditionFormula>if ( (TODAY() - Date_of_Birth__c)/365 &lt; 18, true, false )</errorConditionFormula>
    <errorDisplayField>Date_of_Birth__c</errorDisplayField>
    <errorMessage>Age should be less than 18</errorMessage>
</ValidationRule>
